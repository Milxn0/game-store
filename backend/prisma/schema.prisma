generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role     @default(USER)
  orders    Order[]
  createdAt DateTime @default(now())
}

model Product {
  id          String   @id @default(uuid())
  gameName    String
  description String?
  price       Int
  accounts    Account[]
}

model Account {
  id        String   @id @default(uuid())
  username  String
  password  String
  sold      Boolean  @default(false)
  product   Product  @relation(fields: [productId], references: [id])
  productId String
}

model Order {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId   String
  total    Int
  createdAt DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}
